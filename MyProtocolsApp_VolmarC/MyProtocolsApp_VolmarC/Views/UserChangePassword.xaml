<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyProtocolsApp_VolmarC.Views.UserChangePassword">
    <ContentPage.Content>
        <StackLayout Padding = "20">

            <Entry x:Name="TxtOldPassword" Placeholder="Old password" FontSize="30" 
                   Keyboard="Default" IsPassword="True" />

            <Entry x:Name="TxtNewPassword" Placeholder="New Password" FontSize="30" 
                   Keyboard="Default" IsPassword="True" />

            <Entry x:Name="TxtnewPassword2" Placeholder="Confirm Password" FontSize="30" 
                   Keyboard="Default" IsPassword="True" />

            <Button x:Name="BtnUpdate" Text="Change" BackgroundColor="DarkGreen" CornerRadius="15" Clicked="BtnUpdate_Clicked" />

            <Button x:Name="BtnCancel" Text="Cancel" BackgroundColor="OrangeRed" CornerRadius="15" Clicked="BtnCancel_Clicked" />

            <Button x:Name="BtnShow" Text="Show Password" BackgroundColor="LightSkyBlue" CornerRadius="15" Clicked="BtnShow_Clicked" />
            




        </StackLayout>
    </ContentPage.Content>
</ContentPage>